---
import Layout from '../layouts/Layout.astro';
import Donate from '../components/Donate.astro';
import donate from '../content/donate';
---

<Layout title="Donations for Little Bird">
	<main class="text-center">
		<h1>Make the World a Better Place</h1>
		<p>Thank you for expressing the desire to buy the baby something to make his or her first few years better, but please consider thinking long term and make a donation to help make a difference in the world.</p>
		<ul class="list-unstyled">
			{donate.map(item => (
				<Donate
					title={item.title}
					description={item.description}
					link={item.link}
				/>
			))}
		</ul>
	</main>
</Layout>

<style>
	h1 {
		margin: 2rem 0;
	}

	main {
		margin: auto;
		padding: 1em;
		max-width: 60ch;
	}
	.list-unstyled {
		padding-left: 0;
    list-style: none;
	}
	.text-center {
		text-align: center;
	}
	p {
		margin-bottom: 3rem;
	}
</style>
